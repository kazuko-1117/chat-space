.SideBar
  .LeftHeader
    .LeftHeader__name_icon 
      %h3.LeftHeader__userName
        = current_user.name
      %ul.LeftHeader__Icon
        %li.LeftHeader__icon
          = link_to new_group_path(current_user), class:"LeftHeader__edit" do
            = icon('fas', 'edit')
        %li.LeftHeader__icon
          = link_to edit_user_path(current_user),class:"LeftHeader__setting" do
            = icon('fas', 'cog')
        
  .LeftMain
    - current_user.groups.each do |group|
      .LeftMain__Group
        = link_to "#" do
          .LeftMain__GroupName 
            = group.name
